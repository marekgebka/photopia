<% include ../partials/header %>

<div class="container" style="margin-top: 100px">
  <div class="row">
    <div class="col">
      <h1 class="text-center">Edit <%= photo.name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="style pt-3" style="width: 30%; margin: 0 auto;">   
        <form action="/gallery/<%= photo._id %>?_method=PUT" method="POST">
          <div class="form-group">
            <input class="form-control" type="text" name="gallery[name]" value="<%= photo.name %>">
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="gallery[image]" value="<%= photo.image %>">
          </div>
          <div class="form-group">
              <input class="form-control" type="text" name="gallery[description]" value="<%= photo.description %>">
          </div>
          <button class="btn btn-dark btn-block">Submit</button>
        </form>
        <a href="/gallery">Back</a>
      </div>
    </div>
  </div>
  </div>


<% include ../partials/footer %>