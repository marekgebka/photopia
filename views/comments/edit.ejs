<% include ../partials/header %>

<div class="container" style="margin-top: 100px">
  <div class="row">
    <div class="col">
      <h1 class="text-center">Edit comment</h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="style pt-3" style="width: 30%; margin: 0 auto;">
        <form action="/gallery/<%= gallery_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
          <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
          </div>
          <button class="btn btn-dark btn-block">Submit</button>
        </form>
        <a href="/gallery">Back</a>
      </div>
    </div>
  </div>
  </div>


<% include ../partials/footer %>